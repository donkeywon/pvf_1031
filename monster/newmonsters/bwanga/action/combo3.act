	[ME]
		1
[/TRIGGER]

[BEHAVIOR]
	[SET ACTION]
	[ATTACK]
		5
	[NOW]
[/BEHAVIOR]

[TRIGGER]
	[ON ATTACKSUCCESS]
	[DO BEHAVIOR]
	[ME]
		2
[/TRIGGER]

[BEHAVIOR]
	[SHAKING]
		1	100
	[SET ACTION]
	[ATTACK]
	[RANDOM SELECT]
		4	5
	[/RANDOM SELECT]
	[END]
[/BEHAVIOR]
